{
  "kind": "collectionType",
  "collectionName": "showrooms",
  "info": {
    "singularName": "showroom",
    "pluralName": "showrooms",
    "displayName": "Showroom"
  },
  "options": { "draftAndPublish": true },
  "pluginOptions": {},
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "name", "required": true },
    "city": { "type": "enumeration", "enum": ["Shanghai", "Hangzhou"], "required": true },
    "address": { "type": "string" },
    "hours": { "type": "string" },
    "heroImage": { "type": "media", "multiple": false, "allowedTypes": ["images"] },
    "heroDescription": { "type": "richtext" },
    "spaces": {
      "type": "component",
      "repeatable": true,
      "component": "showroom.space"
    },
    "contactInfo": { "type": "text" }
  }
}